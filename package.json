{
  "name": "neural-pad",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered note-taking application",
  "author": "Your Name",
  "type": "module",
  "main": "dist-electron/electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k -n VITE,ELECTRON -c blue,green \"npm:dev\" \"wait-on tcp:5175 && nodemon --watch electron -e cjs,js,json,ts --exec \\\"npm run start:electron:dev\\\"\"",
    "start:electron:dev": "npm run build:electron && cross-env VITE_DEV_SERVER_URL=http://localhost:5175 NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start:electron": "npm run build && electron .",
    "icon:gen": "node scripts/generate-icons.mjs",
    "prebuild:clean": "cross-env NODE_ENV=production node scripts/prebuild-clean.mjs",
    "preview": "vite preview",
    "dist:win": "npm run prebuild:clean && tsc -p tsconfig.electron.json && npm run icon:gen && electron-builder -w",
    "dist:mac": "npm run prebuild:clean && tsc -p tsconfig.electron.json && npm run icon:gen && electron-builder -m",
    "dist:linux": "npm run prebuild:clean && tsc -p tsconfig.electron.json && npm run icon:gen && electron-builder -l",
    "dist:all": "npm run prebuild:clean && tsc -p tsconfig.electron.json && npm run icon:gen && electron-builder -mwl",
    "start:prod": "npm run build && npm run build:electron && electron ."
  },
  "dependencies": {
    "@capacitor-community/barcode-scanner": "^4.0.1",
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@google/genai": "^1.26.0",
    "@supabase/supabase-js": "^2.89.0",
    "@superclaude-org/superagent": "^0.1.6",
    "@tiptap/core": "^2.11.0",
    "@tiptap/extension-bubble-menu": "^2.11.0",
    "@tiptap/extension-color": "^2.11.0",
    "@tiptap/extension-font-family": "^2.11.0",
    "@tiptap/extension-image": "^2.11.0",
    "@tiptap/extension-placeholder": "^2.11.0",
    "@tiptap/extension-table": "^2.11.0",
    "@tiptap/extension-table-cell": "^2.11.0",
    "@tiptap/extension-table-header": "^2.11.0",
    "@tiptap/extension-table-row": "^2.11.0",
    "@tiptap/extension-text-style": "^2.11.0",
    "@tiptap/extension-underline": "^2.11.0",
    "@tiptap/react": "^2.11.0",
    "@tiptap/starter-kit": "^2.11.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "diff": "^7.0.0",
    "express": "^5.2.1",
    "jspdf": "^3.0.3",
    "jszip": "^3.10.1",
    "knex": "^3.1.0",
    "marked": "^16.4.1",
    "pdfjs-dist": "^5.4.530",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "turndown": "^7.1.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tiptap/extension-history": "^2.11.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.0",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "icon-gen": "^5.0.0",
    "lightningcss": "^1.30.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.neural-pad.app",
    "productName": "Neural Pad",
    "electronVersion": "33.2.0",
    "files": [
      "dist/**",
      "dist-electron/**",
      "build/icons/**",
      "public/**",
      "package.json"
    ],
    "win": {
      "icon": "build/icons/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Neural Pad",
      "runAfterFinish": true
    },
    "mac": {
      "icon": "build/icons/app.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "icon": "build/icons"
    }
  }
}
