{
  "name": "neural-pad",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered note-taking application",
  "author": "Your Name",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k -n VITE,ELECTRON -c blue,green \"npm:dev\" \"wait-on tcp:5175 && electron .\"",
    "build": "vite build",
    "build:electron": "vite build",
    "start:electron": "electron .",
    "icon:gen": "node scripts/generate-icons.mjs",
    "prebuild:clean": "cross-env NODE_ENV=production node scripts/prebuild-clean.mjs",
    "preview": "vite preview",
    "dist:win": "npm run prebuild:clean && npm run build && npm run icon:gen && electron-builder -w"
  },
  "dependencies": {
    "@google/genai": "^1.26.0",
    "@huggingface/transformers": "^3.7.6",
    "@tiptap/core": "^3.8.0",
    "@tiptap/extension-color": "^3.7.2",
    "@tiptap/extension-font-family": "^3.7.2",
    "@tiptap/extension-image": "^3.7.2",
    "@tiptap/extension-placeholder": "^3.7.2",
    "@tiptap/extension-table": "^3.7.2",
    "@tiptap/extension-table-cell": "^3.7.2",
    "@tiptap/extension-table-header": "^3.7.2",
    "@tiptap/extension-table-row": "^3.7.2",
    "@tiptap/extension-text-style": "^3.7.2",
    "@tiptap/extension-underline": "^3.7.2",
    "@tiptap/react": "^3.7.2",
    "@tiptap/starter-kit": "^3.7.2",
    "diff": "^7.0.0",
    "jspdf": "^3.0.3",
    "jszip": "^3.10.1",
    "marked": "^16.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "icon-gen": "^5.0.0",
    "lightningcss": "^1.30.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.neural-pad.app",
    "productName": "Neural Pad",
    "electronVersion": "33.2.0",
    "files": [
      "dist/**",
      "electron/**",
      "build/icons/**",
      "public/**",
      "package.json"
    ],
    "win": {
      "icon": "build/icons/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "build/icons/app.icns"
    },
    "linux": {
      "icon": "build/icons"
    }
  }
}
